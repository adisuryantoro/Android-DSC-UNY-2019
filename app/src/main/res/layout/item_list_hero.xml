<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_margin_teen"
        android:elevation="@dimen/margin_margin_teen"
        app:cardCornerRadius="@dimen/margin_margin_teen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="204dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_item_list_hero_image"
                android:layout_width="@dimen/height_margin_onehundred"
                android:layout_height="@dimen/width_margin_onehundred"
                android:layout_margin="@dimen/margin_margin_sixteen"
                android:src="@drawable/logo_adi_suryantoro"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_item_list_hero_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/horizontal_margin_sixteen"
                android:layout_marginTop="@dimen/vertical_margin_sixteen"
                android:layout_marginEnd="@dimen/horizontal_margin_sixteen"
                android:fontFamily="@font/quicksand_bold"
                android:text="@string/app_name"
                android:textSize="@dimen/textsize_eighteen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_item_list_hero_image"
                app:layout_constraintTop_toTopOf="@id/iv_item_list_hero_image"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/tv_item_list_hero_birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/vertical_margin_teen"
                android:layout_marginBottom="@dimen/vertical_margin_sixteen"
                android:text="@string/app_name"
                app:layout_constraintBottom_toBottomOf="@id/iv_item_list_hero_image"
                app:layout_constraintEnd_toEndOf="@id/tv_item_list_hero_title"
                app:layout_constraintStart_toStartOf="@id/tv_item_list_hero_title"
                app:layout_constraintTop_toBottomOf="@id/tv_item_list_hero_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>